# S3 Source Configuration
S3_SOURCE_BUCKET=intella-bauplan-data
S3_SOURCE_PATH=telemetry/raw/
S3_SOURCE_PATTERN=*.parquet

# Alternate source for pre-generated telemetry data.
# Holds 10 files; the equivalent of 10 simulation runs
# S3_SOURCE_BUCKET=bauplan-alpha-user-import-uploads
# S3_SOURCE_PATH=user-uploads/case-study-intella/telemetry/raw/

# Bauplan Data Configuration
BAUPLAN_NAMESPACE=telemetry
BAUPLAN_TARGET_TABLE=signal

# Prefect Configuration
PREFECT_API_URL=http://localhost:4200/api

# PostgreSQL (Prefect Backend)
POSTGRES_USER=prefect
POSTGRES_PASSWORD=prefect_password
POSTGRES_DB=prefect

# WAP Behavior
# on_success: "inspect" (show diff only) or "merge" (merge to main)
WAP_ON_SUCCESS=merge
# on_failure: "keep" (keep branch for debugging) or "delete" (cleanup)
WAP_ON_FAILURE=keep
# simulate_ingestion: true to generate sample data in S3 before ingestion, false to skip (default: false)
SIMULATE_INGESTION=false

# Bauplan Configuration
BAUPLAN_API_KEY=${BAUPLAN_API_KEY}

# AWS Credentials (required for S3 ingestion simulation)
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=eu-central-1
